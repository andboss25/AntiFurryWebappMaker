{
    "app-info":{
        "name":"Test app",
        "version":1.0
    },
    "globals":{
        "DB_FILEPATH":"DB\\database.db",
        "DB_LOGPATH":"Logs\\DB_LOG.log",
        "DB_INITIALQUERY_PATHS":["DB\\init.sql"]
    },
    "points":{
        "/":{
            "checks":{
                "allowed-methods":["GET"]
            },
            "children":{},
            "type":"Page",
            "name":"Home Page",
            "prop":{
                "source-page":"Pages\\index.html"
            }
        },
        "api":{
            "children":{
                "images":{
                "children":{
                    "antifurry":{
                        "checks":{
                            "allowed-methods":["GET"]
                        },
                        "children":{},
                        "type":"StreamBytes",
                        "name":"Image",
                        "prop":{
                            "scriptable":false,
                            "set-response":"Pages\\image.png",
                            "set-response-type":"image/png",
                            "set-response-code":200
                        }
                    }
                },
                "type":"Path",
                "name":"Api Path",
                "prop":{}
                },
                "hello":{
                    "checks":{
                        "allowed-methods":["GET"],
                        "require-url-params":["name"]
                    },
                    "children":{},
                    "type":"Endpoint",
                    "name":"Test Endpoint",
                    "prop":{
                        "scriptable":false,
                        "set-response":"{'Message':'Hello there this is a test!'}",
                        "set-response-type":"application/json",
                        "set-response-code":200
                    }
                },
                "query":{
                    "checks":{
                        "allowed-methods":["GET"],
                        "require-url-params":["id"],
                        "compare-query-operation":{
                            "params":["id"],
                            "query":"SELECT * FROM users WHERE id=?",
                            "operation":"PASS_IF_EXISTS",
                            "failresp":"{'message':'No such object in the database'}"
                        }
                    },
                    "children":{},
                    "type":"Endpoint",
                    "name":"Test Endpoint",
                    "prop":{
                        "scriptable":false,
                        "set-response":"{'Message':'Hello there this is a test!'}",
                        "set-response-type":"application/json",
                        "set-response-code":200
                    }
                },
                "shit":{
                    "checks":{
                        "allowed-methods":["GET"],
                        "valid-token-check":true
                    },
                    "children":{},
                    "type":"Endpoint",
                    "name":"Scripted This",
                    "prop":{
                        "scriptable":true,
                        "script-path":"Scripts\\test.lua"
                    }
                }
            },
            
            "type":"Path",
            "name":"Api Path",
            "prop":{
            }
        }
    },
    "special-points":{
        "hascode 404;":{
            "children":{},
            "type":"Endpoint",
            "name":"Code 404",
            "prop":{
                "scriptable":false,
                "set-response":"{'Message':'Page not found!'}",
                "set-response-type":"application/json",
                "set-response-code":404
            }
        }
    }
}